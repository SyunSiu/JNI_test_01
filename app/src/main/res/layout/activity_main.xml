<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dwyane.jni01.MainActivity">

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#222222"
        android:minHeight="150dp"
        android:padding="5dp"
        android:text="Hello World!"
        android:textColor="#ffffff"
        android:textSize="11sp" />


    <EditText
        android:id="@+id/duifang_user_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:hint="这里输入对方用户名"
        android:minHeight="50dp"
        android:padding="5dp"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/input_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="#999999"
        android:gravity="start"
        android:hint="这里输入要发送的信息"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="@color/colorPrimary" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="退出" />

        <Button
            android:id="@+id/btn_get_u_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="获取用户" />

        <Button
            android:id="@+id/btn_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="发送" />


        <Button
            android:id="@+id/btn_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="登录" />
    </LinearLayout>
</LinearLayout>
